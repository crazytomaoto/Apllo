<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/tool_bar_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ff_to_131"
        android:orientation="vertical">

        <View
            android:id="@+id/common_status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <RelativeLayout
            android:id="@+id/rl_title_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d45"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_tool_bar_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_left_arrow"
                    android:layout_width="@dimen/d45"
                    android:layout_height="@dimen/d45"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_left_black2" />

                <TextView
                    android:id="@+id/tv_left_title_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-12dp"
                    android:paddingBottom="@dimen/d10"
                    android:paddingLeft="@dimen/d12"
                    android:paddingRight="@dimen/d12"
                    android:paddingTop="@dimen/d10"
                    android:text=""
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tool_bar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d50"
                android:layout_marginRight="@dimen/d50"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="@dimen/d10"
                android:paddingTop="@dimen/d10"
                android:text="@string/app_name"
                android:textColor="@color/_272_to_ff"
                android:textSize="@dimen/d18"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_tool_bar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:minHeight="@dimen/d45"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_right_arrow"
                    android:layout_width="@dimen/d40"
                    android:layout_height="@dimen/d40"
                    android:maxHeight="@dimen/d40"
                    android:maxWidth="@dimen/d40"
                    android:scaleType="centerInside"
                    android:tint="@color/_272_to_ff"
                    android:src="@drawable/common_message"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_right_title_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-12dp"
                    android:paddingBottom="@dimen/d10"
                    android:paddingLeft="@dimen/d12"
                    android:paddingRight="@dimen/d12"
                    android:paddingTop="@dimen/d10"
                    android:text="@string/app_name"
                    android:textColor="@color/color_ff"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_tool_bar_line"
            style="@style/solid_line_style" />

        <View
            android:id="@+id/v_shadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d10"
            android:background="@color/color_f2f"
            android:visibility="gone" />

    </LinearLayout>
</layout>
