<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_right_iv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_43px"
        android:paddingRight="@dimen/dimen_43px">

        <ImageView
            android:layout_width="92px"
            android:layout_height="92px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="86px"
            android:layout_marginBottom="@dimen/dimen_50px"
            android:src="@drawable/ic_apl_logo_select_yes" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/t_address"
                android:textColor="@color/gray3"
                android:textSize="@dimen/dimen_43px" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_46px"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray3"
                android:textSize="@dimen/dimen_43px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tip104"
                android:textColor="@color/gray3"
                android:textSize="@dimen/dimen_43px" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_46px"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingRight="@dimen/dimen_30px"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/gray3"
                android:textSize="@dimen/dimen_43px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/color_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_130px"
        android:layout_marginLeft="118px"
        android:layout_marginRight="118px"
        android:layout_marginBottom="110px"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_transfer"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_40px"
            android:layout_weight="1"
            android:background="@drawable/radius_14_white"
            android:gravity="center">

            <ImageView
                android:layout_width="56px"
                android:layout_height="@dimen/dimen_62px"
                android:layout_marginRight="@dimen/dimen_80px"
                android:src="@drawable/ic_trans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t_transfer"
                android:textColor="@color/gray3"
                android:textSize="@dimen/dimen_46px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delete"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radius_14_gray"
            android:gravity="center">

            <ImageView
                android:layout_width="63px"
                android:layout_height="@dimen/dimen_66px"
                android:layout_marginRight="@dimen/dimen_80px"
                android:src="@drawable/ic_delete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tip105"
                android:textColor="@color/gray3"
                android:textSize="@dimen/dimen_46px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>