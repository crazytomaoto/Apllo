<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_160px">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30px"
        android:text="@string/tip202"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_42px" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_marginTop="@dimen/dimen_10px"
        android:text=""
        android:textColor="@color/color_purple4"
        android:textSize="@dimen/dimen_28px" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="@color/text_green2"
        android:textSize="@dimen/dimen_46px" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_88px"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/radius_14_green1"
        android:gravity="center"
        android:paddingLeft="@dimen/dimens_56px"
        android:paddingRight="@dimen/dimens_56px"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_42px" />
</RelativeLayout>