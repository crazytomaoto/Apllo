<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_144px"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/mining_pool"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_46px" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/iv_apollo"
                android:layout_width="match_parent"
                android:layout_height="488px"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:layout_marginTop="@dimen/dimen_30px"
                android:layout_marginRight="@dimen/dimen_43px"
                android:layout_marginBottom="@dimen/dimen_43px">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="APOLLO.json"
                    app:lottie_loop="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_35px"
                    android:layout_marginTop="@dimen/dimen_35px"
                    android:src="@drawable/ic_mining_apollo" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/iv_nbo"
                android:layout_width="match_parent"
                android:layout_height="488px"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:layout_marginRight="@dimen/dimen_43px"
                android:layout_marginBottom="@dimen/dimen_43px">

                <com.airbnb.lottie.LottieAnimationView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="NBO.json"
                    app:lottie_loop="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_36px"
                    android:layout_marginTop="@dimen/dimen_52px"
                    android:src="@drawable/ic_mining_nbo" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/iv_ddao"
                android:layout_width="match_parent"
                android:layout_height="488px"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:layout_marginRight="@dimen/dimen_43px"
                android:layout_marginBottom="@dimen/dimen_43px">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="DDAO.json"
                    app:lottie_loop="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_36px"
                    android:layout_marginTop="@dimen/dimen_52px"
                    android:src="@drawable/ic_mining_ddao" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/iv_lon"
                android:layout_width="match_parent"
                android:layout_height="488px"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:layout_marginRight="@dimen/dimen_43px"
                android:layout_marginBottom="@dimen/dimen_30px">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="LOULAN.json"
                    app:lottie_loop="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_32px"
                    android:layout_marginTop="@dimen/dimen_50px"
                    android:src="@drawable/ic_mining_lon" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>