<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="1452px"
    android:layout_gravity="bottom"
    android:background="@drawable/radius_29page_color_2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="156px">

        <LinearLayout
            android:id="@+id/ll_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_72px"
            android:padding="@dimen/dimen_20px">

            <ImageView
                android:layout_width="@dimen/dimen_40px"
                android:layout_height="@dimen/dimen_40px"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/t_choose_identity"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_46px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_80px"
        android:layout_marginRight="@dimen/dimen_80px"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_logo"
            android:layout_width="92px"
            android:layout_height="match_parent"
            android:layout_marginTop="88px"
            android:background="@color/page_color2"
            android:divider="@null"
            android:dividerHeight="56px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_60px"
            android:layout_marginTop="105px"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_wallet_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/t_id"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_40px" />

                    <com.sz.apollo.ui.views.AutoListView
                        android:id="@+id/lv_wallets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23px"
                        android:divider="@null"
                        android:dividerHeight="@dimen/dimen_24px"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_add_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="202px"
                        android:layout_marginTop="29px"
                        android:background="@drawable/radius_14_bottom"
                        android:gravity="center"
                        android:text="@string/tip182"
                        android:layout_marginBottom="@dimen/dimen_30px"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_40px" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>