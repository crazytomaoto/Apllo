<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="588px"
        android:layout_marginLeft="126px"
        android:layout_marginTop="208px"
        android:layout_marginRight="126px"
        android:background="@drawable/radius_14_bottom_boder3">

        <EditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="450px"
            android:layout_marginLeft="@dimen/dimen_46px"
            android:layout_marginTop="@dimen/dimen_46px"
            android:layout_marginRight="@dimen/dimen_46px"
            android:layout_marginBottom="@dimen/dimen_10px"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/gray3"
            android:textSize="@dimen/dimen_35px" />

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="@dimen/dimen_50px"
            android:layout_height="@dimen/dimen_50px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dimen_46px"
            android:layout_marginBottom="@dimen/dimen_30px"
            android:src="@drawable/ic_scan" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="137px"
        android:layout_marginTop="@dimen/dimen_28px"
        android:layout_marginRight="137px"
        android:text="@string/tip20"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_35px" />

    <LinearLayout
        android:id="@+id/ll_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135px"
        android:layout_marginTop="64px"
        android:layout_marginRight="135px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_40px"
                android:layout_height="@dimen/dimen_50px"
                android:src="@drawable/ic_lock" />

            <EditText
                android:id="@+id/ed_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="26px"
                android:background="@null"
                android:hint="@string/tip21"
                android:textColor="@color/white"
                android:textColorHint="#4D556F"
                android:textSize="@dimen/dimen_35px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/color_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_35px"
            android:text="@string/tip22"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_35px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <Button
        android:id="@+id/tv_create"
        android:layout_width="806px"
        android:layout_height="@dimen/dimen_130px"
        android:layout_below="@id/tv_txt1"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="105px"
        android:background="@drawable/radius_14_green1"
        android:gravity="center"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_43px" />

</LinearLayout>