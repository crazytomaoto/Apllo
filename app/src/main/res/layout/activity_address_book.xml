<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_right_iv" />

    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_page_main"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_43px"
        android:paddingRight="@dimen/dimen_43px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145px"
            android:layout_marginTop="@dimen/dimen_60px"
            android:layout_marginBottom="@dimen/dimen_72px"
            android:background="@drawable/radius_70_gray6"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="38px">

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_60px"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/dimen_43px" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="68px"
                android:paddingTop="@dimen/dimen_20px"
                android:paddingRight="@dimen/dimen_20px"
                android:paddingBottom="@dimen/dimen_20px"
                android:scaleType="centerInside"
                android:src="@drawable/ic_search" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_line"
            android:dividerHeight="3px"
            android:scrollbars="none" />
    </LinearLayout>

    <include layout="@layout/layout_empty" />
</LinearLayout>