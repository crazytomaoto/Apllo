<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_50px"
        android:layout_marginTop="@dimen/dimen_30px"
        android:layout_marginRight="@dimen/dimen_50px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="248px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/t_trade_hash"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_trade_hash"
                android:layout_width="622px"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="@color/gray3"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/trans_date"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_tran_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/gray3"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/t_expiration"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_expiration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/gray3"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/state"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_42px" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_stateOne"
                android:layout_width="194px"
                android:layout_height="86px"
                android:gravity="center"
                android:text="@string/t_solved"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px"
                android:visibility="gone"
                app:rv_backgroundColor="@color/color_copy"
                app:rv_cornerRadius="@dimen/dimen_35px" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_stateTwo"
                android:layout_width="wrap_content"
                android:layout_height="86px"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:gravity="center"
                android:text="@string/t_irreversible"
                android:paddingRight="@dimen/dimen_20px"
                android:paddingLeft="@dimen/dimen_20px"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px"
                app:rv_backgroundColor="#24B89B"
                app:rv_cornerRadius="@dimen/dimen_35px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/t_block_height"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="170px"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/gray3"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="248px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/tip181"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_block_hash"
                android:layout_width="622px"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="@color/gray3"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />
    </LinearLayout>
</LinearLayout>