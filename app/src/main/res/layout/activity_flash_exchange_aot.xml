<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_right_iv" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="580px"
        android:layout_marginLeft="44px"
        android:layout_marginTop="@dimen/dimen_80px"
        android:layout_marginRight="44px"
        android:background="@drawable/radius_14_page_color_2">

        <ImageView
            android:id="@+id/ll_u"
            android:layout_width="@dimen/dimen_70px"
            android:layout_height="@dimen/dimen_70px"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:layout_marginTop="68px"
            android:src="@drawable/logo_usdt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_70px"
            android:layout_alignTop="@id/ll_u"
            android:layout_marginLeft="23px"
            android:layout_toRightOf="@id/ll_u"
            android:gravity="center"
            android:text="USDT"
            android:textColor="@color/white2"
            android:textSize="@dimen/dimen_52px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_aot"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_70px"
            android:layout_alignTop="@id/ll_u"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="23px"
            android:layout_marginRight="@dimen/dimen_30px"
            android:gravity="center"
            android:text="AOT"
            android:textColor="@color/white2"
            android:textSize="@dimen/dimen_52px"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/dimen_70px"
            android:layout_height="@dimen/dimen_70px"
            android:layout_alignTop="@id/tv_aot"
            android:layout_toLeftOf="@id/tv_aot"
            android:src="@drawable/logo_aot" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_90px"
            android:layout_marginTop="132px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="33px"
                android:layout_marginRight="33px"
                android:src="@drawable/ic_line" />

            <ImageView
                android:layout_width="86px"
                android:layout_height="86px"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_exchange" />
        </RelativeLayout>

        <EditText
            android:id="@+id/ed_content"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="276px"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/tip72"
            android:inputType="numberDecimal|number"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/dimen_40px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dash_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="370px"
            android:background="@drawable/shape_dash_page_color" />

        <com.flyco.roundview.RoundTextView
            android:layout_width="@dimen/dimen_20px"
            android:layout_height="@dimen/dimen_40px"
            android:layout_alignTop="@id/dash_line"
            app:rv_backgroundColor="@color/color_page_main"
            app:rv_cornerRadius_BR="@dimen/dimen_40px"
            app:rv_cornerRadius_TR="@dimen/dimen_40px" />

        <com.flyco.roundview.RoundTextView
            android:layout_width="@dimen/dimen_20px"
            android:layout_height="@dimen/dimen_40px"
            android:layout_alignTop="@id/dash_line"
            android:layout_alignParentRight="true"
            app:rv_backgroundColor="@color/color_page_main"
            app:rv_cornerRadius_BL="@dimen/dimen_40px"
            app:rv_cornerRadius_TL="@dimen/dimen_40px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_35px"
            android:layout_marginRight="@dimen/dimen_35px"
            android:layout_marginBottom="@dimen/dimen_40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tip206"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_32px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/tip207"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_32px" />

            <TextView
                android:id="@+id/tv_now_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white2"
                android:textSize="@dimen/dimen_30px" />

            <TextView
                android:id="@+id/tv_max_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="0.00AOT"
                android:textColor="@color/white2"
                android:textSize="@dimen/dimen_30px" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_80px"
        android:layout_marginTop="@dimen/dimen_70px"
        android:layout_marginRight="@dimen/dimen_80px"
        android:lineSpacingMultiplier="1.1"
        android:text="@string/tip208"
        android:textColor="@color/color_red"
        android:textSize="38px" />

    <LinearLayout
        android:id="@+id/btn_exchange"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_130px"
        android:layout_marginLeft="44px"
        android:layout_marginTop="@dimen/dimen_70px"
        android:layout_marginRight="44px"
        android:gravity="center"
        android:orientation="horizontal"
       android:background="@drawable/radius_14_green1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flash" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_24px"
            android:text="@string/tip76"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_42px" />
    </LinearLayout>
</LinearLayout>