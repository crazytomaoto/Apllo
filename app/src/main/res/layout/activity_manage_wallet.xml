<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_43px"
        android:layout_marginRight="@dimen/dimen_43px"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_card_name"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_marginTop="@dimen/dimen_60px"
            android:background="@drawable/radius_14_page_color_2_top_lr"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_60px"
                android:src="@drawable/ic_card_name" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:layout_weight="1"
                android:text="@string/t_card_name"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />

            <TextView
                android:id="@+id/tv_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27px"
                android:layout_marginRight="@dimen/dimen_40px"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_marginTop="1px"
            android:background="@color/page_color2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_60px"
                android:src="@drawable/ic_loction" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:layout_weight="1"
                android:text="@string/wallet_address"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="494px"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_40px"
                android:gravity="right|center_vertical"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_40px"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_export_phrase"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_marginTop="1px"
            android:background="@color/page_color2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_60px"
                android:src="@drawable/ic_export_phrase" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:layout_weight="1"
                android:text="@string/export_phrase"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_40px"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_export_key"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_marginTop="1px"
            android:background="@color/page_color2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_60px"
                android:src="@drawable/ic_key" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:layout_weight="1"
                android:text="@string/export_key"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_40px"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_export_pk"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_marginTop="1px"
            android:background="@drawable/radius_14_page_color_2_bottom_lr"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_60px"
                android:src="@drawable/ic_key" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:layout_weight="1"
                android:text="@string/export_pk"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_40px"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_43px"
            android:background="@drawable/radius_14_page_color_2"
            android:gravity="center"
            android:text="@string/delete_account"
            android:textColor="@color/gray2"
            android:textSize="@dimen/dimen_40px" />
    </LinearLayout>

</LinearLayout>