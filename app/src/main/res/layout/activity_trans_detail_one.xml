<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_40px" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2px"
            android:layout_marginTop="4px"
            android:text="AOT"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_36px"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_32px"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="@dimen/dimen_40px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_50px"
        android:layout_marginRight="@dimen/dimen_50px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:layout_marginTop="15px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/t_sender"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/t_reveiver"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/t_trade_type"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_trade_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t_transfer"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="248px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/t_trade_hash"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_trade_hash"
                android:layout_width="622px"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="doiyouloopghbcxeeeuirsjdixvsfdhx1
m123ncvmfmmnbvmcsjadhdeyyldosdnjsndweoiuhoqwhfdls"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/t_hash_detail"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_hash_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t_check"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/t_remark"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="630px"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_43px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />
    </LinearLayout>
</LinearLayout>