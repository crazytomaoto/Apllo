<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="481px"
        android:layout_marginLeft="@dimen/dimen_43px"
        android:layout_marginTop="@dimen/dimen_60px"
        android:layout_marginRight="@dimen/dimen_43px"
        android:orientation="vertical"
        android:background="@drawable/radius_14_page_color_2">

        <FrameLayout
            android:id="@+id/fly_pin"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/dimen_50px"
                android:layout_height="@dimen/dimen_50px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_35px"
                android:background="@drawable/ic_key" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_30px"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="122px"
                android:singleLine="true"
                android:text="@string/tip109"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/color_page_main" />

        <FrameLayout
            android:id="@+id/fly_reset"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/dimen_50px"
                android:layout_height="@dimen/dimen_50px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_35px"
                android:background="@drawable/ic_key" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_30px"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="122px"
                android:singleLine="true"
                android:text="@string/tip110"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/color_page_main" />

        <FrameLayout
            android:id="@+id/fly_no_pass_pay"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">

            <ImageView
                android:layout_width="49px"
                android:layout_height="@dimen/dimen_62px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_35px"
                android:background="@drawable/ic_lock2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_30px"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="122px"
                android:singleLine="true"
                android:text="@string/tip111"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>