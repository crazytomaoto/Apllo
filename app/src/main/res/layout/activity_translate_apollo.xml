<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_right_iv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="@dimen/dimen_42px"
        android:layout_marginRight="@dimen/dimen_42px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nowAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ddkdkkdd"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />

            <ImageView
                android:id="@+id/iv_left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_46px"
                android:src="@drawable/ic_arrow_dowm" />
        </LinearLayout>

        <View
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nowType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AOC"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />


            <ImageView
                android:id="@+id/iv_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_46px"
                android:src="@drawable/ic_arrow_dowm" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_42px"
        android:layout_marginRight="@dimen/dimen_42px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_receive_address"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/tip34"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/dimen_42px" />

            <ImageView
                android:id="@+id/iv_contract"
                android:layout_width="45px"
                android:layout_height="49px"
                android:src="@drawable/ic_mem" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />


        <EditText
            android:id="@+id/edit_tran_amount"
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/tip33"
            android:inputType="number|numberDecimal"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/dimen_42px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/t_fee"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/t_available_balance"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_42px" />

            <TextView
                android:id="@+id/tv_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_green"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/tip175"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_42px" />

            <EditText
                android:id="@+id/ed_sign"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="@string/tip1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/color_hint"
                android:textSize="@dimen/dimen_42px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_sure"
        android:layout_width="590px"
        android:layout_height="@dimen/dimen_130px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="500px"
        android:background="@drawable/radius_14_green1"
        android:gravity="center"
        android:text="@string/sure_trans"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_42px" />
</LinearLayout>