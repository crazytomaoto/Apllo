<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:layout_marginLeft="43px"
        android:layout_marginTop="@dimen/dimen_43px"
        android:layout_marginRight="43px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_basis_power"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radius48_border"
            android:gravity="center"
            android:text="@string/tip59"
            android:textColor="@color/tx_power_type"
            android:textSize="@dimen/dimen_43px" />

        <TextView
            android:id="@+id/tv_date_power"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="63px"
            android:layout_weight="1"
            android:background="@drawable/radius48_border"
            android:gravity="center"
            android:text="@string/tip60"
            android:textColor="@color/tx_power_type"
            android:textSize="@dimen/dimen_43px" />

        <TextView
            android:id="@+id/tv_share_power"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="63px"
            android:layout_weight="1"
            android:background="@drawable/radius48_border"
            android:gravity="center"
            android:text="@string/tip61"
            android:textColor="@color/tx_power_type"
            android:textSize="@dimen/dimen_43px" />
    </LinearLayout>

    <com.sz.apollo.ui.views.MyRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="346px"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:layout_marginTop="@dimen/dimen_43px"
                android:layout_marginRight="@dimen/dimen_43px"
                android:background="@drawable/ic_power_detail_bg"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/tip60"
                        android:textColor="@color/white2"
                        android:textSize="@dimen/dimen_46px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_20px"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white2"
                        android:textSize="86px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_my_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_20px"
                        android:text="@string/tip65"
                        android:textColor="@color/white2"
                        android:textSize="@dimen/dimen_35px"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:layout_marginTop="75px"
                android:layout_marginRight="@dimen/dimen_43px"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_50px"
                    android:text="@string/tip62"
                    android:textColor="@color/white2"
                    android:textSize="@dimen/dimen_40px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_40px"
                    android:layout_marginBottom="@dimen/dimen_20px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/tip63"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/dimen_35px" />

                    <TextView
                        android:id="@+id/tv_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tip64"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_40px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_line" />

                <ListView
                    android:id="@+id/lv_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_43px"
                    android:scrollbars="none"
                    android:layout_marginRight="@dimen/dimen_43px"
                    android:divider="@color/color_line"
                    android:dividerHeight="3px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_43px"
                android:layout_marginTop="75px"
                android:layout_marginRight="@dimen/dimen_43px"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_50px"
                    android:layout_marginBottom="@dimen/dimen_20px"
                    android:text="@string/tip66"
                    android:textColor="@color/white2"
                    android:textSize="@dimen/dimen_40px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_40px"
                    android:layout_marginBottom="@dimen/dimen_20px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/tip67"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/dimen_35px" />

                    <TextView
                        android:id="@+id/tv_word_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tip68"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_40px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_line" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_line" />

                <ListView
                    android:id="@+id/lv_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/color_line"
                    android:dividerHeight="3px"
                    android:scrollbars="none" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="76px"
                android:layout_marginTop="84px"
                android:layout_marginRight="@dimen/dimen_43px"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="143px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/tip69"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/dimen_40px" />

                    <TextView
                        android:id="@+id/tv_amount_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_green2"
                        android:textSize="@dimen/dimen_46px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="143px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/tip70"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/dimen_40px" />

                    <TextView
                        android:id="@+id/tv_amount_share_effective"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_green2"
                        android:textSize="@dimen/dimen_46px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="143px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/tip71"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/dimen_40px" />

                    <TextView
                        android:id="@+id/tv_num_sys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_green2"
                        android:textSize="@dimen/dimen_46px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="143px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/tip73"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/dimen_40px" />

                    <TextView
                        android:id="@+id/tv_account_fs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_green2"
                        android:textSize="@dimen/dimen_46px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="143px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/tip74"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/dimen_40px" />

                    <TextView
                        android:id="@+id/tv_pool_basis_power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_green2"
                        android:textSize="@dimen/dimen_46px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_line" />

            </LinearLayout>
        </LinearLayout>
    </com.sz.apollo.ui.views.MyRefreshLayout>

</LinearLayout>