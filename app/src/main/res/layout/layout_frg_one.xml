<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.sz.apollo.ui.views.MyRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_page_main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_head"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_144px"
                    android:fitsSystemWindows="true">

                    <RelativeLayout
                        android:id="@+id/rl_left_top"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dimen_43px"
                        android:paddingRight="@dimen/dimen_43px">

                        <ImageView
                            android:layout_width="@dimen/dimen_50px"
                            android:layout_height="@dimen/dimen_42px"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_home_left" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_46px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_zH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_60px"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_120px"
                            android:text="0.00"
                            android:textColor="@color/white2"
                            android:textSize="115px"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tip205"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/dimen_35px" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/iv_three_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="17px"
                        android:layout_marginRight="@dimen/dimen_50px"
                        android:padding="@dimen/dimen_30px"
                        android:src="@drawable/ic_three_point" />

                    <ImageView
                        android:id="@+id/iv_wallet_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_three_point"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dimen_80px"
                        android:layout_marginRight="@dimen/dimen_80px"
                        android:src="@drawable/ic_logo_a" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dimen_40px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_balance"
                        android:layout_alignLeft="@id/tv_balance"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_50px" />

                    <ImageView
                        android:layout_width="@dimen/dimen_50px"
                        android:layout_height="@dimen/dimen_50px"
                        android:layout_below="@id/iv_three_point"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="22px"
                        android:layout_marginRight="@dimen/dimen_80px"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_qr" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_43px"
                    android:layout_marginTop="@dimen/dimens_84px"
                    android:layout_marginRight="@dimen/dimen_43px"
                    android:background="@drawable/radius29"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_36px"
                            android:layout_marginTop="@dimen/dimen_52px"
                            android:layout_marginBottom="@dimen/dimen_52px"
                            android:text="@string/tip204"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/dimen_35px" />

                        <ImageView
                            android:id="@+id/iv_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dimen_52px"
                            android:layout_marginRight="@dimen/dimen_36px"
                            android:src="@drawable/ic_add"
                            android:textSize="@dimen/dimen_35px" />
                    </RelativeLayout>

                    <com.sz.apollo.ui.views.AutoListView
                        android:id="@+id/lv_wallets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null" />
                </LinearLayout>
            </LinearLayout>
        </com.sz.apollo.ui.views.MyRefreshLayout>
    </ScrollView>

</LinearLayout>