<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="878px"
    android:layout_gravity="bottom"
    android:background="@drawable/radius_29_gray5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="156px">

        <LinearLayout
            android:id="@+id/ll_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_80px"
            android:padding="@dimen/dimen_20px">

            <ImageView
                android:layout_width="@dimen/dimen_40px"
                android:layout_height="@dimen/dimen_40px"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tip17"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_46px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/color_line" />

    <RelativeLayout
        android:id="@+id/rl_phrase"
        android:layout_width="match_parent"
        android:layout_height="216px"
        android:paddingRight="@dimen/dimen_52px">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85px"
            android:layout_marginTop="@dimen/dimen_70px"
            android:text="@string/t_phrase"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_46px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_alignLeft="@id/tv1"
            android:layout_marginTop="@dimen/dimen_18px"
            android:text="@string/tip19"
            android:textColor="@color/gray3"
            android:textSize="@dimen/dimen_35px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_43px"
            android:layout_marginRight="@dimen/dimen_46px"
            android:background="@color/color_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pk"
        android:layout_width="match_parent"
        android:layout_height="202px"
        android:paddingRight="@dimen/dimen_52px">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85px"
            android:layout_marginTop="@dimen/dimen_70px"
            android:text="私钥"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_46px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"
            android:layout_alignLeft="@id/tv2"
            android:layout_marginTop="@dimen/dimen_18px"
            android:text="@string/tip18"
            android:textColor="@color/gray3"
            android:textSize="@dimen/dimen_35px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_43px"
            android:layout_marginRight="@dimen/dimen_46px"
            android:background="@color/color_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_key"
        android:layout_width="match_parent"
        android:layout_height="216px"
        android:paddingRight="@dimen/dimen_52px">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85px"
            android:layout_marginTop="@dimen/dimen_70px"
            android:text="Keystore"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_46px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv3"
            android:layout_alignLeft="@id/tv3"
            android:layout_marginTop="@dimen/dimen_18px"
            android:text="@string/tip20"
            android:textColor="@color/gray3"
            android:textSize="@dimen/dimen_35px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_43px"
            android:layout_marginRight="@dimen/dimen_46px"
            android:background="@color/color_line" />
    </RelativeLayout>
</LinearLayout>