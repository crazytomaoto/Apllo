<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_color2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_father"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_204px"
        android:background="@drawable/bg_apl"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_50px">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_48px"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_35px" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address"
            android:layout_marginTop="@dimen/dimen_24px"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_40px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dimen_20px"
            android:layout_marginBottom="@dimen/dimen_20px"
            android:src="@drawable/ic_now_wallet" />
    </RelativeLayout>
</LinearLayout>