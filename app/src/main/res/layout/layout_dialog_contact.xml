<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="1452px"
    android:layout_gravity="bottom"
    android:background="@drawable/radius_29_gray5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40px">

        <LinearLayout
            android:id="@+id/ll_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_72px"
            android:padding="@dimen/dimen_20px">

            <ImageView
                android:layout_width="@dimen/dimen_40px"
                android:layout_height="@dimen/dimen_40px"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/t_address_list"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_46px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginTop="76px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:background="@drawable/radius_70_gray6"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_search"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_66px"
            android:layout_weight="1"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_66px"
            android:src="@drawable/ic_search" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_55px"
        android:layout_marginTop="@dimen/dimen_60px"
        android:layout_marginRight="@dimen/dimen_55px"
        android:divider="@color/page_color2"
        android:dividerHeight="1px"
        android:scrollbars="none"></ListView>
</LinearLayout>