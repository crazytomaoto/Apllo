<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_right_tv" />

    <EditText
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100px"
        android:layout_marginLeft="@dimen/dimen_60px"
        android:layout_marginRight="@dimen/dimen_60px"
        android:background="@null"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_40px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_42px"
        android:layout_marginTop="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_42px"
        android:background="@color/page_color2" />
</LinearLayout>